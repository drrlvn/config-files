[alias]
    ai   = add -i
    ap   = add -p
    dc   = diff --cached
    ds   = !git --no-pager diff --stat
    dw   = diff --color-words
    l    = log --oneline
    lg   = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
    lol  = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    lp   = log -p
    ls   = log --stat
    ri   = rebase -i
    st   = status

[color]
    ui = auto

[color "diff"]
    old  = red bold
    new  = blue bold
    frag = magenta bold

[core]
    pager          = less
    sparseCheckout = true

[diff]
    renamelimit      = 0
    renames          = copy
    ignoreSubmodules = dirty

[push]
    default = current

[rebase]
    stat = true

[branch]
    autosetuprebase = always

[user]
    name  = Dror Levin
    email = spatz@psybear.com

[gui]
    fontui = -family Ubuntu -size 10 -weight normal -slant roman -underline 0 -overstrike 0
    fontdiff = -family \"Ubuntu Mono\" -size 12 -weight normal -slant roman -underline 0 -overstrike 0

[svn]
    rmdir = true
