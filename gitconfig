[alias]
	a  = add
	ai = add -i
	b  = branch
	ci = commit
	co = checkout
	d  = diff
	dc = diff --cached
	ds = !git --no-pager diff --stat
	fp = format-patch
	l  = log --oneline
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
	r  = rebase
	ri = rebase -i
	st = status

[color]
	ui = auto

[color "diff"]
	old = red bold
	new = blue bold
	frag = magenta bold

[core]
	pager = less

[rebase]
	stat = true
