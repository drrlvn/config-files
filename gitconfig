[alias]
    br = branch -vv --sort=-committerdate
    co = checkout
    ci = commit -v
    dc = diff --cached
    ds = diff --stat
    dw = diff --color-words
    fix = commit --amend --no-edit
    flush = !git add -A && git commit -m flush && git reset --hard HEAD@{1}
    l = log --graph
    la = log --graph --all
    lgg = log --walk-reflogs --decorate --pretty=oneline --abbrev-commit
    lg = log --graph
    lo = log --graph @{upstream}..
    lgs = log --graph --stat
    lp = log --patch
    lpw = log --patch --color-words
    ls = log --stat
    pr = !git co master && git pull && git co @{-1} && git rb master
    ri = rebase -i
    st = status
    unstage = reset --

[color "diff"]
    old = red bold
    new = blue bold
    frag = magenta bold

[format]
    pretty = format:%C(auto)%h%C(auto)%d%Creset %s %Cgreen(%ad) %C(bold blue)<%an>%Creset

[core]
    pager = less -F
    sparseCheckout = true
    abbrev = 12
    untrackedCache = true

[commit]
    verbose = true

[pager]
    log = /usr/share/git/diff-highlight/diff-highlight | less -F
    show = /usr/share/git/diff-highlight/diff-highlight | less -F
    diff = /usr/share/git/diff-highlight/diff-highlight | less -F

[diff]
    algorithm = histogram
    renamelimit = 0
    renames = copy
    ignoreSubmodules = dirty

[log]
    decorate = auto
    date = format:%a %F %T

[status]
    branch = true
    short = true

[rebase]
    autosquash = true
    autostash = true
    stat = true

[fetch]
    prune = true

[pull]
    ff = only

[push]
    default = simple
    followTags = true

[interactive]
    diffFilter = /usr/share/git/diff-highlight/diff-highlight

[user]
    useConfigOnly = true
    name = Dror Levin

[gui]
    fontui = -family \"Open Sans\" -size 10 -weight normal -slant roman -underline 0 -overstrike 0
    fontdiff = -family \"Ubuntu Mono\" -size 12 -weight normal -slant roman -underline 0 -overstrike 0

[svn]
    rmdir = true

[tig]
    line-graphics = utf-8
