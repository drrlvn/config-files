[alias]
    ai      = add -i
    ap      = add -p
    br      = branch
    co      = checkout
    ci      = commit
    dc      = diff --cached
    ds      = !git --no-pager diff --stat
    dw      = diff --color-words
    fix     = commit --amend --no-edit
    flush   = !git add -A && git commit -m "flush" && git reset --hard HEAD@{1}
    l       = log --graph --decorate --pretty=oneline --abbrev-commit
    la      = log --graph --decorate --pretty=oneline --abbrev-commit --all
    lgg     = log --walk-reflogs --decorate --pretty=oneline --abbrev-commit
    lg      = log --graph --date=relative --pretty=format:'%C(auto)%h%C(auto)%d%Creset %s %Cgreen(%ad) %C(bold blue)<%an>%Creset'
    lb      = !git lg master..
    lo      = !git lg origin..
    lr      = !git lg --since=\"2 weeks ago\"
    lgs     = !git lg --stat
    lp      = log --patch
    lpw     = log --patch --color-words
    ls      = log --stat
    pr      = !git co master && git pull && git co @{-1} && git rb master
    rb      = rebase
    ri      = rebase -i
    st      = status -sb
    unstage = reset --

[color "diff"]
    old  = red bold
    new  = blue bold
    frag = magenta bold

[core]
    pager          = less
    sparseCheckout = true
    abbrev = 12

[diff]
    renamelimit      = 0
    renames          = copy
    ignoreSubmodules = dirty

[rebase]
    autosquash = true
    stat = true

[fetch]
    prune = true

[pull]
    ff = only

[push]
    default = simple
    followTags = true

[user]
    name  = Dror Levin
    email = spatz@psybear.com

[gui]
    fontui = -family \"Open Sans\" -size 10 -weight normal -slant roman -underline 0 -overstrike 0
    fontdiff = -family \"Ubuntu Mono\" -size 12 -weight normal -slant roman -underline 0 -overstrike 0

[svn]
    rmdir = true

[tig]
    line-graphics = utf-8
